<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Shelly_UI.ViewModels"
             xmlns:vm="clr-namespace:PackageManager.Alpm;assembly=PackageManager"
             xmlns:lang="clr-namespace:Shelly_UI.Assets"
             xmlns:models="clr-namespace:Shelly_UI.Models"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Shelly_UI.Views.UpdateWindow"
             x:DataType="viewModels:UpdateViewModel">
    <UserControl.Styles>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="Foreground" Value="{DynamicResource SystemBaseHighColor}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="12,4" />
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="SeparatorBrush" Value="Transparent" />
        </Style>
    </UserControl.Styles>
    <Grid Background="{DynamicResource SystemChromeLowColor}">
        <Grid RowDefinitions="Auto,*">
            <Border Background="{DynamicResource SystemAccentColor}" Padding="8">
                <Grid ColumnDefinitions="*,Auto,Auto" VerticalAlignment="Center">
                    <TextBlock
                        Text="{x:Static lang:Resources.Packages}"
                        FontWeight="Bold"
                        Foreground="{DynamicResource SystemBaseHighColor}"
                        VerticalAlignment="Center" />
                    <TextBox
                        Grid.Column="1"
                        Width="220"
                        Margin="12,0"
                        Watermark="{x:Static lang:Resources.SearchPackages}"
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                        Background="{DynamicResource ChromeWhite}"
                        Foreground="{DynamicResource AltMediumLow}"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource SystemBaseHighColor}"
                        CornerRadius="4" />
                    <Button
                        Grid.Column="2"
                        Content="Toggle All"
                        Padding="10,4"
                        Command="{Binding CheckAll}" />
                </Grid>
            </Border>
            <DataGrid
                Grid.Row="1"
                ItemsSource="{Binding FilteredPackages}"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                GridLinesVisibility="None">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Header="{x:Static lang:Resources.Name}"
                        Binding="{Binding Name}"
                        Width="*" />
                    <DataGridTextColumn
                        Header="{x:Static lang:Resources.CurrentVersion}"
                        Binding="{Binding CurrentVersion}"
                        Width="160" />
                    <DataGridTextColumn
                        Header="{x:Static lang:Resources.PackageNewVersion}"
                        Binding="{Binding NewVersion}"
                        Width="160" />
                    <DataGridTextColumn
                        Header="{x:Static lang:Resources.PackageSize}"
                        Binding="{Binding SizeString}"
                        Width="100" />
                    <DataGridTemplateColumn
                        Header=""
                        Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" HorizontalAlignment="Center" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>

            </DataGrid>

        </Grid>
        <Border VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Margin="30"
                CornerRadius="30"
                BoxShadow="0 4 15 0 #60000000">
            <Button Width="60" Height="60"
                    Padding="0"
                    CornerRadius="30">
                <avalonia:MaterialIcon Kind="Download" Width="30" Height="30" Foreground="{DynamicResource SystemAccentColor}" />
            </Button>
        </Border>
    </Grid>
</UserControl>