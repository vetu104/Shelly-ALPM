<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Shelly_UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="Shelly_UI.Views.PasswordWindow"
        x:DataType="vm:PasswordViewModel"
        x:CompileBindings="True"
        Title="Authentication Required"
        Width="400" Height="175"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        SystemDecorations="Full"
        Background="{DynamicResource SystemChromeLowColor}">
    <StackPanel Margin="20" Spacing="10" >
        <TextBlock Text="Authentication is required to perform this action." FontWeight="Bold" FontSize="14" />
        <TextBlock Text="Please enter your sudo password:" FontSize="12"/>
        <TextBox PasswordChar="*" Text="{Binding Password}" Watermark="Password"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Cancel" Command="{Binding CancelCommand}" IsCancel="True"/>
            <Button Content="Confirm" Command="{Binding ConfirmCommand}" IsDefault="True"/>
        </StackPanel>
    </StackPanel>
</Window>
