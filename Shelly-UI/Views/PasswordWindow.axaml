<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Shelly_UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="Shelly_UI.Views.PasswordWindow"
        x:DataType="vm:PasswordViewModel"
        Title="Authentication Required"
        Width="400" Height="200"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SystemDecorations="Full">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Authentication is required to perform this action." FontWeight="Bold"/>
        <TextBlock Text="Please enter your sudo password:"/>
        <TextBox PasswordChar="*" Text="{Binding Password}" Watermark="Password"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Cancel" Command="{Binding CancelCommand}"/>
            <Button Content="Confirm" Command="{Binding ConfirmCommand}" IsDefault="True"/>
        </StackPanel>
    </StackPanel>
</Window>
